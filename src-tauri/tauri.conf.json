{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run tauri:build",
    "beforeDevCommand": "npm run tauri:dev",
    "devPath": "http://localhost:4000",
    "distDir": "../build",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Cristata",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "startDragging": true,
        "create": true
      }
    },
    "bundle": {
      "active": true,
      "category": "Productivity",
      "copyright": "Jack Buehner",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "app.cristata",
      "publisher": "Cristata",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "endpoints": ["https://server.cristata.app/releases/app/{{target}}/{{arch}}/{{current_version}}"],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDJEQUI4RThGQUIwMjAyM0YKUldRL0FnS3JqNDZyTGU5NGRqWkpUWTl2L1lNL1AxQU5xbjNjRzZjR05rMlVOMHlkSisweEY3cHYK"
    },
    "windows": [
      {
        "title": "Cristata",
        "width": 1100,
        "height": 700,
        "resizable": true,
        "fullscreen": false,
        "transparent": true,
        "decorations": true
      }
    ]
  }
}
